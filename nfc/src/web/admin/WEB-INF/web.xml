<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <filter>
        <filter-name>threedAdminFilter</filter-name>
        <filter-class>com.tms.threed.threedAdmin.main.server.ThreedAdminFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>threedAdminFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>threedAdminService</servlet-name>
        <servlet-class>com.tms.threed.threedAdmin.main.server.ThreedAdminServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>threedAdminService</servlet-name>
        <url-pattern>/threedAdminService.json</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>threedAdminService</servlet-name>
        <url-pattern>/load_pngs</url-pattern>
    </servlet-mapping>


    <security-constraint>
        <web-resource-collection>
            <web-resource-name>All Stuff</web-resource-name>
            <!--<url-pattern>/</url-pattern>-->
            <url-pattern>/index.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>configuratorAdmin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
    <security-role>
        <role-name>configuratorAdmin</role-name>
    </security-role>

</web-app>
